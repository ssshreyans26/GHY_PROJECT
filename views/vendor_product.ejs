    <!--------------------------Table------------------------>
    <table class="table table-hover table-responsive-sm text-center " id="vendorproduct" style="margin-top: 2%">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category </th>
      <th scope="col">Sub-Category</th>
      <th scope="col">Brand Name</th>
    </tr>
  </thead>
  <tbody>
    <% Category.forEach(function(c){ %>
      <% c.subcategory.forEach(function(s){ %>
      <% c.s.brand.forEach(function(b){ %>
      <tr>
        <th scope="row">1</th>
        <td><%=c.categoryname%></td>
        
        <td><%=s.subcategoryname%></td>
        <td><%=b.brand%></td>
        <%})%> 
        <%})%>   
      </tr>
      <% }); %>
      </tbody>
</table>


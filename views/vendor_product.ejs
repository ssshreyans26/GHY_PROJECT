<div class="form-group container" style="margin-top: 2%">
  <label for="categorylist">Select Category:</label>
  <select class="form-control" id="categorylist">
    <% Category.forEach(function(c){ %>
         <option class="container" value="<%=c.categoryname%>"/>
     <% }); %>
  </select>
    <label for="subcategorylist">Select Sub-Category:</label>
  <select class="form-control" id="subcategorylist">
    <% Subategory.forEach(function(s){ %>
         <option class="container" value="<%=s.subcategoryname%>"/>
      <% }); %>
  </select>
  <label for="brand">Brand:</label>
  <input type="text" class="form-control" id="brand">
  <button type="submit" class="btn btn-primary container" id="addbrand" style="margin-top: 2%">Add Brand</button>
</div>

    <div class="container text-center" style="margin-top: 2%">

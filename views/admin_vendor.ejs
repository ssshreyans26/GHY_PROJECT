    <script>      
      console.log("inside vendor")


        
      $(document).ready(function(){
        function approval(approval, userid){
         console.log(approval)
        $.ajax({
          type: "POST",
          url: '/admin/vendor' ,
          contentType: "application/json",
          processData: false,
            data:  JSON.stringify({userid : userid,approval:approval}),
            success: function(data) {

<!----------------------Vendor----------------list------------------------->
<div class="container text-center" style="margin-top: 2%">
	<h3 class="text-secondary"> Vendor-List</h3>
</div>
<!--------------------------------------Table------------------------------>
<table class="table table-hover table-responsive-md" style="margin-top: 2%">
  <thead>
    <tr>
      <th scope="col">Serial Number</th>
      <th scope="col">Name</th>
      <th scope="col">Email-address</th>
      <th scope="col">Store Name</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Accept</th>
      <th scope="col">Decline</th>
    </tr>
  </thead>
  <tbody>
    <% vendor.forEach(function(user){ %>
      <% if(user.flag== false){ %>
      <form action="/vendor" method="GET">
    <tr id="<%=user._id%>" >
      <th scope="row">1</th>
      <td><%=user.name%></td>
      <td><%=user.email%></td>
      <td><%=user.storename%></td>
      <td><%=user.phoneno%></td>
        
      <td><a class="btn btn-primary"  role="button"  id="ACCEPT" data="<%=user._id%>">Accept</a></td>
      <td><a class="btn btn-danger"  role="button"   id="REJECT" data="<%=user._id%>">Decline</a></td>
    </tr>
  </form>
  <% } %>
    <% }); %>
  </tbody>
</table>

<!--------------------------------------------Accepted Vendor-------------------------->
<div class="container text-center">
  <h3 class="container text-Secondary">Accepted Vendor</h3>
</div>

<table class="table table-hover table-responsive-md" id="approvedvendor" style="margin-top: 2%">
  <thead>
    <tr>
      <th scope="col">Serial Number</th>
      <th scope="col">Name</th>
      <th scope="col">Email-address</th>
      <th scope="col">Store Name</th>
      <th scope="col">Phone Number</th>
    </tr>
  </thead>
  <tbody>
    <% vendor.forEach(function(user){ %>
      <% if(user.flag== true){ %>
      <form action="/vendor" method="GET">
    <tr id="<%=user._id%>" >
      <th scope="row">1</th>
      <td><%=user.name%></td>
      <td><%=user.email%></td>
      <td><%=user.storename%></td>
      <td><%=user.phoneno%></td>
    </tr>
  </form>
  <% } %>
    <% }); %>
  </tbody>
</table>



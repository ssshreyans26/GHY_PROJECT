<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Vendor-Signup</title>
  </head>
  <body class="p-3 mb-2 bg-light text-dark">
    <div class="container text-center">
      <h3 class="text-secondary"> Sign-up </h3>
    </div>
      <!--------------------FORM--------------------->
    <form class="container" style="margin-top: 2%" action="" method="POST">
  <div class="row container">
    <div class="col">
      <label for="Brandname">Brand Name</label>
      <input type="text" name="brandname" class="form-control" id="brandname">
    </div>
    
  <button type="submit" class="container btn btn-primary" id="addbrand">Add Brand</button>
</form>
<table id= "myTable" class="table table-hover table-responsive-md" style="margin-top: 2%">
  <thead>
    <tr>
      <th scope="col">Serial Number</th>
      <th scope="col">Brand Name</th>
    </tr>
  </thead>
  <tbody>
    <% brand.forEach(function(b){ %>
    <tr>
      <th scope="row">1</th>
      <td><%=b.brandname%></td>    
    </tr>
    <% }); %>
    <!-- <tr style="display: none;" id="addedbrandrow">
      <th scope="row">1</th>
      <td id="addedbrand" ></td>    
    </tr> -->
  </tbody>
</table>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    
    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>      
      console.log("inside brand")


        
      $(document).ready(function(){
          
        $('#addbrand').click(function(e) {
          e.preventDefault();
          var brandname = ($('#brandname').val());
          
        $.ajax({
          type: "POST",
          url: '/admin/brand' ,
          contentType: "application/json",
          processData: false,
            data:  JSON.stringify({brandname : brandname}),
            success: function(data) {
              console.log(data)
          }
      }).done(function (data) {
          console.log("OK");
          $('#myTable tr:last').after('<tr id="addedbrandrow">      <th scope="row">1</th>      <td id="addedbrand" ></td>      </tr>');
          $('#myTable tr:last td:last').html(data.brandname)         
          // $('#addedbrand').html(data.brandname)
          // $('#addedbrandrow').removeAttr("style");

      }).fail(function ( jqXHR, textStatus, errorThrown ) {
          console.log(jqXHR);
          console.log(textStatus);
          console.log(errorThrown);
        });
      });
    });

    </script>
  
  
  </body>
</html>